<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<fx:root alignment="CENTER" prefHeight="500.0" prefWidth="300.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Label text="Aantal spelers:" />
            <ComboBox fx:id="cbNumber" prefWidth="30.0" />
         </children>
      </HBox>
      <VBox fx:id="vbTextFields" alignment="TOP_CENTER" maxWidth="200.0" prefHeight="300.0" prefWidth="200.0" spacing="20.0" />
      <HBox alignment="BOTTOM_CENTER" prefWidth="200.0" spacing="100.0">
         <children>
            <Button fx:id="btnStart" mnemonicParsing="false" onAction="#start" prefWidth="80.0" text="Yo-ho-ho!" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@stylesheet.css" />
   </stylesheets>
</fx:root>
