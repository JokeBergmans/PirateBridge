<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" prefHeight="500.0" prefWidth="300.0" spacing="20.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="lblWinner" text="" />
      <Label text="Jij bent de winnaar!" />
       <GridPane fx:id="grid" alignment="CENTER" gridLinesVisible="true">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <VBox.margin>
               <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
           </VBox.margin>
       </GridPane>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
         <children>
            <Button mnemonicParsing="false" prefWidth="80.0" text="Stop" />
            <Button mnemonicParsing="false" prefWidth="80.0" text="Nieuw Spel" />
         </children>
      </HBox>
   </children>
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
</fx:root>
